page {
  height: 100vh;
  display: flex;
  flex-direction: column;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
}
.login-container {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}
.login-title {
  font-size: 40rpx;
  color: #fff;
  font-weight: bold;
  margin-bottom: 30rpx;
}
.login-desc {
  font-size: 28rpx;
  color: #eee;
  margin-bottom: 60rpx;
}
.login-btn {
  width: 80%;
  background: #fff;
  color: #667eea;
  font-size: 32rpx;
  border-radius: 50rpx;
  font-weight: bold;
  margin-top: 20rpx;
}
.scrollarea {
  flex: 1;
  overflow-y: hidden;
}
.log-item {
  margin-top: 20rpx;
  text-align: center;
}
.log-item:last-child {
  padding-bottom: env(safe-area-inset-bottom);
}
.agreement-row {
  margin-top: 40rpx;
  display: flex;
  align-items: center;
  font-size: 24rpx;
  color: #fff;
}
.agreement-checkbox {
  margin-right: 10rpx;
  transform: scale(0.8);
}
.agreement-text {
  color: #fff;
  margin-right: 4rpx;
}
.agreement-link {
  color: #ffd700;
  text-decoration: underline;
  margin: 0 4rpx;
}
