.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  height: 100vh;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: white;
}
.logo {
  font-size: 48rpx;
  font-weight: bold;
  margin-top: 100rpx;
  text-shadow: 2rpx 2rpx 4rpx rgba(0,0,0,0.3);
}
.subtitle {
  margin: 40rpx 0;
  font-size: 28rpx;
  color: rgba(255,255,255,0.8);
}
.user-info {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin: 40rpx 0;
}
.avatar {
  width: 120rpx;
  height: 120rpx;
  border-radius: 60rpx;
  border: 4rpx solid white;
  margin-bottom: 20rpx;
}
.nickname {
  font-size: 32rpx;
  color: white;
  font-weight: bold;
  margin-bottom: 20rpx;
}
.main-btn {
  width: 80%;
  margin: 40rpx 0;
  background: rgba(255,255,255,0.2);
  border: 2rpx solid white;
  color: white;
  border-radius: 50rpx;
  font-size: 32rpx;
  font-weight: bold;
}

.main-btn:active {
  background: rgba(255,255,255,0.3);
}

.function-buttons {
  display: flex;
  flex-direction: column;
  width: 80%;
  gap: 20rpx;
  margin: 40rpx 0;
}

.function-btn {
  background: rgba(255,255,255,0.2);
  border: 2rpx solid white;
  color: white;
  border-radius: 30rpx;
  font-size: 28rpx;
  padding: 20rpx;
}

.function-btn:active {
  background: rgba(255,255,255,0.3);
}

.agreement-section {
  position: absolute;
  bottom: 40rpx;
  left: 0;
  right: 0;
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 0 40rpx;
}

.agreement-item {
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
  font-size: 24rpx;
  color: rgba(255,255,255,0.8);
}

.agreement-checkbox {
  margin-right: 10rpx;
  transform: scale(0.8);
}

.agreement-text {
  margin-right: 5rpx;
}

.agreement-link {
  color: #ffd700;
  text-decoration: underline;
}

.logout-btn {
  background: rgba(255,255,255,0.2);
  border: 2rpx solid white;
  color: white;
  border-radius: 20rpx;
  font-size: 24rpx;
  padding: 10rpx 20rpx;
  margin-top: 10rpx;
}

.logout-btn:active {
  background: rgba(255,255,255,0.3);
}

.main-container {
  background: #fafbfc;
  min-height: 100vh;
  padding-bottom: 120rpx;
}

.header {
  padding: 40rpx 0 20rpx 0;
  text-align: center;
  background: #fff;
  font-weight: bold;
  font-size: 36rpx;
  border-bottom: 1rpx solid #eee;
}

.header-title {
  font-size: 36rpx;
  font-weight: bold;
}

.search-bar {
  display: flex;
  align-items: center;
  background: #f3f4f6;
  border-radius: 30rpx;
  margin: 30rpx 30rpx 0 30rpx;
  padding: 0 20rpx;
  height: 60rpx;
}
.search-icon {
  color: #bbb;
  margin-right: 10rpx;
}
.search-input {
  flex: 1;
  border: none;
  background: transparent;
  font-size: 28rpx;
  color: #333;
}

.filter-section {
  margin: 30rpx 0 0 0;
  padding: 0 30rpx;
}
.filter-row {
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
}
.filter-label {
  font-size: 26rpx;
  color: #888;
  margin-right: 20rpx;
  flex-shrink: 0;
}
.filter-tags {
  display: flex;
  flex-direction: row;
  overflow-x: auto;
}
.tag {
  background: #f3f4f6;
  color: #666;
  border-radius: 24rpx;
  padding: 10rpx 28rpx;
  margin-right: 18rpx;
  font-size: 26rpx;
  border: 1rpx solid #f3f4f6;
  transition: all 0.2s;
}
.tag-selected {
  background: #667eea;
  color: #fff;
  border: 1rpx solid #667eea;
}

.anime-list {
  margin: 30rpx 0 0 0;
  padding: 0 30rpx;
}
.anime-card {
  display: flex;
  background: #fff;
  border-radius: 20rpx;
  box-shadow: 0 2rpx 12rpx rgba(0,0,0,0.04);
  margin-bottom: 30rpx;
  padding: 24rpx;
  align-items: flex-start;
}
.anime-cover {
  width: 120rpx;
  height: 120rpx;
  background: #e5e7eb;
  border-radius: 12rpx;
  margin-right: 24rpx;
}
.anime-info {
  flex: 1;
  display: flex;
  flex-direction: column;
}
.anime-title {
  font-size: 30rpx;
  font-weight: bold;
  color: #222;
  margin-bottom: 10rpx;
}
.anime-tags {
  display: flex;
  flex-wrap: wrap;
  margin-bottom: 10rpx;
}
.anime-tag {
  font-size: 22rpx;
  color: #888;
  background: #f3f4f6;
  border-radius: 12rpx;
  padding: 4rpx 14rpx;
  margin-right: 12rpx;
  margin-bottom: 6rpx;
}
.anime-bottom {
  display: flex;
  align-items: center;
  justify-content: space-between;
}
.anime-score {
  font-size: 28rpx;
  color: #667eea;
  font-weight: bold;
}
.fav-btn {
  background: #f3f4f6;
  color: #888;
  border-radius: 20rpx;
  font-size: 24rpx;
  padding: 8rpx 28rpx;
  border: none;
  margin-left: 20rpx;
}
.fav-btn-active {
  background: #667eea;
  color: #fff;
}

.top-actions {
  display: flex;
  justify-content: space-around;
  align-items: center;
  background: #fff;
  padding: 30rpx 0 10rpx 0;
  border-bottom: 1rpx solid #f3f4f6;
}
.action-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 120rpx;
}
.action-icon {
  width: 56rpx;
  height: 56rpx;
  margin-bottom: 8rpx;
}
.action-text {
  font-size: 24rpx;
  color: #333;
}
.tab-bar {
  display: flex;
  align-items: center;
  background: #fff;
  padding: 0 20rpx;
  border-bottom: 1rpx solid #eee;
  margin-bottom: 10rpx;
}
.tab-item {
  font-size: 30rpx;
  color: #888;
  margin-right: 30rpx;
  padding: 24rpx 0 18rpx 0;
  position: relative;
}
.tab-active {
  color: #222;
  font-weight: bold;
  border-bottom: 4rpx solid #ffb43a;
}
.tab-more {
  margin-left: auto;
  color: #888;
  font-size: 24rpx;
  display: flex;
  align-items: center;
}
.arrow {
  font-size: 28rpx;
  margin-left: 4rpx;
}
.movie-scroll {
  width: 100%;
  white-space: nowrap;
  background: #fff;
  padding: 20rpx 0 10rpx 0;
}
.movie-list {
  display: flex;
  flex-direction: row;
  gap: 24rpx;
  padding-left: 20rpx;
}
.movie-card {
  width: 200rpx;
  background: #fff;
  border-radius: 18rpx;
  box-shadow: 0 2rpx 12rpx rgba(0,0,0,0.04);
  padding-bottom: 18rpx;
  position: relative;
  margin-right: 8rpx;
}
.movie-cover {
  width: 200rpx;
  height: 280rpx;
  border-radius: 18rpx 18rpx 0 0;
  object-fit: cover;
}
.fav-icon {
  position: absolute;
  top: 12rpx;
  right: 12rpx;
  width: 36rpx;
  height: 36rpx;
  z-index: 2;
}
.movie-title {
  font-size: 26rpx;
  color: #222;
  font-weight: bold;
  margin: 12rpx 0 4rpx 12rpx;
  width: 170rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}
.movie-rating {
  display: flex;
  align-items: center;
  margin-left: 12rpx;
}
.star {
  width: 24rpx;
  height: 24rpx;
  margin-right: 2rpx;
}
.score {
  font-size: 24rpx;
  color: #ffb43a;
  margin-left: 6rpx;
}
.recommend-row {
  display: flex;
  flex-direction: row;
  gap: 24rpx;
  padding: 30rpx 20rpx 0 20rpx;
}
.recommend-card {
  flex: 1;
  background: #fff;
  border-radius: 18rpx;
  box-shadow: 0 2rpx 12rpx rgba(0,0,0,0.04);
  padding: 24rpx 18rpx 18rpx 18rpx;
  display: flex;
  flex-direction: column;
  align-items: flex-start;
}
.recommend-title {
  font-size: 26rpx;
  color: #222;
  font-weight: bold;
  margin-bottom: 8rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.recommend-left {
  /* 样式可自定义 */
  color: #333;
}
.recommend-right {
  font-size: 26rpx;
  color: #999;
}
.arrow {
  font-weight: bold;
}
.arrow {
  font-size: 32rpx;
  color: #ccc;
  transition: 0.2s;
}
.arrow:active {
  color: #667eea; /* 点击时变色 */
}

.recommend-desc {
  font-size: 22rpx;
  color: #888;
  margin-bottom: 12rpx;
}
.recommend-img {
  width: 80rpx;
  height: 80rpx;
  border-radius: 12rpx;
  object-fit: cover;
}