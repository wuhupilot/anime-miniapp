.profile-container {
  min-height: 100vh;
  background: #f7f8fa;
  padding-bottom: 120rpx;
}
.profile-card {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  border-radius: 0 0 32rpx 32rpx;
  padding: 60rpx 0 40rpx 0;
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-bottom: 30rpx;
  box-shadow: 0 4rpx 16rpx rgba(102,126,234,0.08);
}
.avatar {
  width: 120rpx;
  height: 120rpx;
  border-radius: 60rpx;
  border: 4rpx solid #fff;
  background: #fff;
  margin-bottom: 18rpx;
}
.nickname {
  font-size: 32rpx;
  color: #fff;
  font-weight: bold;
  text-shadow: 0 2rpx 8rpx rgba(0,0,0,0.08);
}
.section {
  background: #fff;
  border-radius: 20rpx;
  margin: 0 24rpx 30rpx 24rpx;
  padding: 30rpx 24rpx 24rpx 24rpx;
  box-shadow: 0 2rpx 12rpx rgba(0,0,0,0.04);
}
.section-title {
  font-size: 28rpx;
  color: #222;
  font-weight: bold;
  margin-bottom: 18rpx;
}
.tag-list {
  display: flex;
  flex-wrap: wrap;
  gap: 16rpx;
}
.tag {
  background: linear-gradient(90deg, #667eea 0%, #764ba2 100%);
  color: #fff;
  border-radius: 20rpx;
  padding: 10rpx 28rpx;
  font-size: 24rpx;
  font-weight: bold;
}
.no-tags {
  color: #aaa;
  font-size: 24rpx;
}
.func-list {
  display: flex;
  gap: 40rpx;
  margin-top: 10rpx;
}
.func-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 120rpx;
  padding: 18rpx 0;
  border-radius: 18rpx;
  background: #f3f4f6;
  box-shadow: 0 2rpx 8rpx rgba(102,126,234,0.04);
  cursor: pointer;
  transition: background 0.2s;
}
.func-item:active {
  background: #e0e7ff;
}
.func-icon {
  width: 48rpx;
  height: 48rpx;
  margin-bottom: 8rpx;
}
.logout-btn {
  width: 80%;
  margin: 40rpx auto 0 auto;
  background: linear-gradient(90deg, #ff5858 0%, #ff7c1c 100%);
  color: #fff;
  font-size: 32rpx;
  font-weight: bold;
  border-radius: 40rpx;
  padding: 20rpx 0;
  border: none;
  box-shadow: 0 2rpx 8rpx rgba(255,124,28,0.08);
  display: block;
  letter-spacing: 2rpx;
}
.logout-btn:active {
  background: #ff7c1c;
}